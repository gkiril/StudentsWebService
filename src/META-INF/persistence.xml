<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
      http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<persistence-unit name="myBase" transaction-type="RESOURCE_LOCAL">
		<class>entities.Etudiant</class>
		<class>entities.Promotion</class>
		<class>entities.Administrator</class>
		<properties>
			<!-- pour voir les requetes SQL -->
			<property name="hibernate.show_sql" value="true" />
			<property name="hibernate.format_sql" value="true" />

			<!-- parametres de connection JDBC -->
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver" />
			<property name="hibernate.connection.url" value="jdbc:mysql://sol.dil.univ-mrs.fr/db02"/>
			<property name="hibernate.connection.username" value="user02" />
			<property name="hibernate.connection.password" value="30131" />

			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
		</properties>
	</persistence-unit>
</persistence>
 
